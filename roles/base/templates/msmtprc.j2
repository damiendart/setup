defaults
aliases /etc/msmtp.aliases
auth on
syslog on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account default
from {{ base__administrator_account_email }}
host {{ base__msmtp_default_hostname }}
password {{ base__msmtp_default_password }}
port 587
user {{ base__msmtp_default_username }}
