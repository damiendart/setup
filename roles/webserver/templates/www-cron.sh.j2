export CRON=true

for DIR in /var/www/*; do
  (
    if [ -f "$DIR/current_release.sh" ]; then
      # shellcheck source=/dev/null
      source "$DIR/current_release.sh"

      if [ -x "$DIR/releases/$DEPLOYED_RELEASE/private/cron/cron-{{ item }}" ]; then
        "$DIR/releases/$DEPLOYED_RELEASE/private/cron/cron-{{ item }}"
      fi
    fi
  )
done
